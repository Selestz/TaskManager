@{
    ViewData["Title"] = "Доступ запрещён";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body p-5">
                    <i class="bi bi-shield-x" style="font-size: 5rem; color: #dc3545;"></i>
                    <h1 class="mt-4">Доступ запрещён</h1>
                    <p class="text-muted mt-3">
                        У вас нет прав для доступа к этой странице.
                    </p>
                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary me-2">
                            <i class="bi bi-box-arrow-in-right"></i> Войти
                        </a>
                        <a asp-controller="Tasks" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-house"></i> На главную
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
